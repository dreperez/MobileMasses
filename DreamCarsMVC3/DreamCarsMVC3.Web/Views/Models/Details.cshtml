@model DreamCarsMVC3.Models.Model

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Year @Model.Manufacturer.Name @Model.Name</h2>
<br/>
<table>
    <tr>
        <td colspan="2"><img width="340" class="image" src="http://localhost:6414/Content/images/Models/@Model.Image" alt="Loading..." /></td>
    </tr>
    <tr>
        <td><h3>Base Price:</h3></td>
        <td><h3>@String.Format("{0:C}", Model.BasePrice)</h3></td>
    </tr>
    <tr>
        <td><h3>Engine Location:</h3></td>
        <td><h3>@Model.EngineLocation</h3></td>
    </tr>
    <tr>
        <td><h3>Available Engines:&nbsp;&nbsp;</h3></td>
        <td><h3>@foreach (var item in @Model.AvailableEngines) {
            @Html.ActionLink(item.Name, "Details", "Engines", new { id = item.EngineId }, null)
            <text> | </text>
        }
        </h3></td>
    </tr>
</table>



